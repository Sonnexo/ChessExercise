<Window x:Class="ChessExerciseManagement.UI.FenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessExerciseManagement.UI"
        mc:Ignorable="d"
        Title="FenWindow" Height="139" Width="500" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="FenTextBox" Text="" TextWrapping="Wrap" Height="57" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="CheckFenButton" Content="Check FEN" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="154" Click="CheckFenButton_Click"/>
        <Button x:Name="SaveFenButton" Content="Save FEN" HorizontalAlignment="Left" Margin="169,72,0,0" VerticalAlignment="Top" Width="154" Click="SaveFenButton_Click"/>
        <Button x:Name="SaveExerciseButton" Content="Save as Exercise" Margin="328,72,10,0" VerticalAlignment="Top" Click="SaveExerciseButton_Click"/>
    </Grid>
</Window>
