<Window x:Class="ChessExerciseManagement.UI.ExploreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessExerciseManagement.UI"
        mc:Ignorable="d"
        Title="ExploreWindow" Height="600" Width="800" MinWidth="400" MinHeight="300">
    <Grid>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="140" Click="SearchButton_Click"/>
        <TextBox x:Name="KeywordTexbox" AcceptsReturn="True" HorizontalAlignment="Left" Margin="10,10,0,35" TextWrapping="Wrap" Text="" Width="140"/>
        <ListBox x:Name="ExerciseListBox" Margin="155,10,10,10" MouseDoubleClick="ExerciseListBox_MouseDoubleClick" />

    </Grid>
</Window>
